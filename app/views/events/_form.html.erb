<%= form_for @event do |f| %>
  <div class="form-group">
    <label>name</label>
    <%= f.text_field :name, placeholder: "name", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>description</label>
    <%= f.text_field :description, placeholder: "description", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>price</label>
    <%= f.number_field :price, placeholder: "price", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>capacity</label>
    <%= f.number_field :capacity, placeholder: "capacity", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.check_box :includes_food %> includes-food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %>includes-drinks
  </div>

  <div class="form-group">
    <label>starts-at</label>
    <%=f.date_field :starts_at, placeholder:"starts-at", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>ends_at</label>
    <%= f.date_field :ends_at, placeholder: "ends_at", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.check_box :active %>active
  </div>

  <label>Categories</label>

<%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
  <div class="form-group">
    <%= b.check_box(class: "check_box") %> <%= b.object.name %>
  </div>
<% end %>
<div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>
<% end %>




