<div class="panel panel-primary">
  <div class="panel-heading"></div>

  <div class="panel-body">

    <p>Name: <%= @event.name %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p>Name: <%= @event.name%></p>
    <p><%= @event.description %> <%= @event.description%></p>


    <!-- Amenities -->
    <h4>Details</h4>
    <ul class="amenities">
    <li><p>Name: <%= @event.name%></p></li>
    <li><p><%= @event.location %> <%= @event.location%></p></li>
    <li><p><%= @event.price %> <%= @event.price %></p></li>
    <li><p><%= @event.capacity %> <%= @event.capacity %></p></li>
    <li><p><%= @event.includes_food %> <%= @event.includes_food %></p></li>
    <li><p><%= @event.includes_drinks %> <%= @event.includes_drinks %></p></li>
      <li><p><%= @event.starts_at %> <%= @event.starts_at %></p></li>
      <li><p><%= @event.ends_at %> <%= @event.ends_at %></p></li>
      <li><p><%= @event.active %> <%= @event.active %></p></li>
    </ul>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
