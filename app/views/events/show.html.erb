<div class="panel panel-primary">
  <div class="panel-heading"></div>

  <div class="panel-body">

    <p>Event Name: <%= @event.name %></p>
    <p>Host: <%= @event.user.email %></p>

    <!-- Main Info -->
    <h4>Main Info</h4>
    <p><%= @event.description %> <%= @event.description%></p>


    <!-- Amenities -->
    <h4>Details</h4>
    <ul class="amenities">
    <li><p>Name: <%= @event.name%></p></li>
    <li><p><%= @event.location %></p></li>
    <li><p><%= @event.price %></p></li>
    <li><p><%= @event.capacity %></p></li>
    <li><p><%= @event.includes_food %></p></li>
    <li><p><%= @event.includes_drinks %></p></li>
      <li><p><%= @event.starts_at %></p></li>
      <li><p><%= @event.ends_at %></p></li>
      <li><p><%= @event.active %></p></li>
    </ul>
    <h4>Categories</h4>
  <% @categories.each do |category| %>
    <span class="label label-success"><%= category.name %></span>
  <% end %>

  </div>

</div>

<%= link_to "Back", events_path, class: "btn btn-default" %>
